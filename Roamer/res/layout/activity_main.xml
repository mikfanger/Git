<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/plane_bg"
    tools:context=".HomeScreenActivity" >

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:scaleType="center"
        android:src="@drawable/gray_gradient" />

    <ImageButton
        android:id="@+id/settingsButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="6dp"
        android:background="@color/transparent"
        android:contentDescription="@string/intro_image_desc"
        android:maxHeight="50dp"
        android:maxWidth="50dp"
        android:scaleType="centerCrop"
        android:src="@drawable/tag" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:src="@drawable/roamer" />

    <ImageView
        android:id="@+id/roamerCreateTag"
        android:layout_width="225dp"
        android:layout_height="200dp"
        android:layout_alignLeft="@+id/settingsButton"
        android:layout_below="@+id/imageView2"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="25dp"
        android:adjustViewBounds="true"
        android:background="@drawable/btn_gray"
        android:src="@color/DarkGrey" />

    <ImageButton
        android:id="@+id/findRoamers"
        android:layout_width="100dp"
        android:layout_height="85dp"
        android:layout_alignTop="@+id/roamerCreateTag"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="17dp"
        android:layout_toRightOf="@+id/settingsButton"
        android:background="@color/transparent"
        android:contentDescription="@string/app_name"
        android:scaleType="fitCenter"
        android:src="@drawable/findroamers" />

    <ImageButton
        android:id="@+id/checkEventsButton"
        android:layout_width="100dp"
        android:layout_height="85dp"
        android:layout_alignLeft="@+id/findRoamers"
        android:layout_below="@+id/findRoamers"
        android:background="@color/transparent"
        android:contentDescription="@string/app_name"
        android:scaleType="fitCenter"
        android:src="@drawable/events" />

    <ImageButton
        android:id="@+id/getMyRoamersButton"
        android:layout_width="100dp"
        android:layout_height="85dp"
        android:layout_alignTop="@+id/checkEventsButton"
        android:layout_toRightOf="@+id/checkEventsButton"
        android:background="@color/transparent"
        android:contentDescription="@string/app_name"
        android:scaleType="fitCenter"
        android:src="@drawable/myroamers" />

    <ImageButton
        android:id="@+id/checkInboxButton"
        android:layout_width="100dp"
        android:layout_height="85dp"
        android:layout_alignLeft="@+id/getMyRoamersButton"
        android:layout_alignTop="@+id/findRoamers"
        android:background="@color/transparent"
        android:contentDescription="@string/app_name"
        android:scaleType="fitCenter"
        android:src="@drawable/inbox" />

    <ImageButton
        android:id="@+id/imageButtonPost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="49dp"
        android:layout_marginRight="17dp"
        android:background="@color/transparent"
        android:src="@drawable/post" />

    <ImageButton
        android:id="@+id/ExitButtonMain"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/settingsButton"
        android:background="@color/transparent"
        android:contentDescription="@string/app_name"
        android:scaleType="fitCenter"
        android:src="@drawable/exit_icon" />

</RelativeLayout>