<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/plane_bg"
    tools:context=".HomeScreenActivity" >

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:scaleType="center"
        android:src="@drawable/gray_gradient" />

    <ImageButton
        android:id="@+id/settingsButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="6dp"
        android:background="@color/transparent"
        android:contentDescription="@string/intro_image_desc"
        android:maxHeight="50dp"
        android:maxWidth="50dp"
        android:scaleType="centerCrop"
        android:src="@drawable/tag" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:src="@drawable/roamer" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="225dp"
        android:layout_height="200dp"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:background="@drawable/btn_gray"
        android:src="@color/transparent" />

    <ImageButton
        android:id="@+id/findRoamers"
        android:layout_width="100dp"
        android:layout_height="85dp"
        android:layout_alignLeft="@id/imageView3"
        android:layout_alignTop="@+id/imageView3"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="17dp"
        android:layout_toRightOf="@+id/settingsButton"
        android:background="@color/transparent"
        android:contentDescription="@string/app_name"
        android:scaleType="fitCenter"
        android:src="@drawable/findroamers" />

    <ImageButton
        android:id="@+id/ExitButtonMain"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/settingsButton"
        android:layout_toRightOf="@+id/imageView3"
        android:background="@color/transparent"
        android:contentDescription="@string/app_name"
        android:scaleType="fitCenter"
        android:src="@drawable/exit_icon" />

    <ImageButton
        android:id="@+id/checkInboxButton"
        android:layout_width="100dp"
        android:layout_height="85dp"
        android:layout_alignLeft="@+id/findRoamers"
        android:layout_below="@+id/findRoamers"
        android:background="@color/transparent"
        android:contentDescription="@string/app_name"
        android:scaleType="fitCenter"
        android:src="@drawable/events" />

    <ImageButton
        android:id="@+id/sendMessageButton"
        android:layout_width="100dp"
        android:layout_height="85dp"
        android:layout_above="@+id/checkInboxButton"
        android:layout_toRightOf="@+id/findRoamers"
        android:background="@color/transparent"
        android:contentDescription="@string/app_name"
        android:scaleType="fitCenter"
        android:src="@drawable/inbox" />

    <ImageButton
        android:id="@+id/setLocationButton"
        android:layout_width="100dp"
        android:layout_height="85dp"
        android:layout_alignTop="@+id/checkInboxButton"
        android:layout_toRightOf="@+id/checkInboxButton"
        android:background="@color/transparent"
        android:contentDescription="@string/app_name"
        android:scaleType="fitCenter"
        android:src="@drawable/myroamers" />

</RelativeLayout>