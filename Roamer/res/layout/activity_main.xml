<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/plane_landscape"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".HomeScreenActivity" >

    <ImageButton
        android:id="@+id/BackIntroButton"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:contentDescription="@string/app_name"
        android:scaleType="fitCenter"
        android:src="@drawable/back_arrow2"
        android:visibility="invisible" />

    <ImageButton
        android:id="@+id/checkInboxButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/sendMessageButton"
        android:layout_marginLeft="26dp"
        android:layout_toRightOf="@+id/textView2"
        android:background="@color/transparent"
        android:contentDescription="@string/app_name"
        android:src="@drawable/honeycomb_mail" />

    <ImageButton
        android:id="@+id/findRoamers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/settingsButton"
        android:layout_below="@+id/ExitButtonMain"
        android:layout_marginLeft="20dp"
        android:background="@color/transparent"
        android:contentDescription="@string/app_name"
        android:src="@drawable/honeycomb_google_navigation" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/settingsButton"
        android:layout_alignLeft="@+id/setLocationButton"
        android:layout_marginBottom="14dp"
        android:text="@string/set_location"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignLeft="@+id/sendMessageButton"
        android:text="@string/send_message"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignLeft="@+id/findRoamers"
        android:text="@string/find_roamer"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <ImageButton
        android:id="@+id/settingsButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/BackIntroButton"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="34dp"
        android:background="@color/transparent"
        android:contentDescription="@string/intro_image_desc"
        android:maxHeight="50dp"
        android:maxWidth="50dp"
        android:scaleType="centerCrop"
        android:src="@drawable/settings_android_base" />

    <ImageButton
        android:id="@+id/ExitButtonMain"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@color/transparent"
        android:contentDescription="@string/app_name"
        android:scaleType="fitCenter"
        android:src="@drawable/exit_icon" />

    <ImageButton
        android:id="@+id/setLocationButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ExitButtonMain"
        android:layout_marginRight="17dp"
        android:layout_toLeftOf="@+id/BackIntroButton"
        android:background="@color/transparent"
        android:contentDescription="@string/app_name"
        android:src="@drawable/honeycomb_maps" />

    <ImageButton
        android:id="@+id/sendMessageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ExitButtonMain"
        android:layout_marginLeft="34dp"
        android:layout_toRightOf="@+id/textView1"
        android:background="@color/transparent"
        android:contentDescription="@string/app_name"
        android:src="@drawable/honeycomb_sms" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignLeft="@+id/checkInboxButton"
        android:text="@string/check_inbox"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>