<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".CreateAccountActivityPic" >

    <ImageView
        android:id="@+id/ivImage"
        android:layout_width="115dp"
        android:layout_height="115dp"
        android:layout_marginLeft="136dp"
        android:layout_x="180dp"
        android:layout_y="8dp"
        android:src="@drawable/no_photo" />

    <Button
        android:id="@+id/findPicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="53dp"
        android:layout_marginLeft="88dp"
        android:layout_x="78dp"
        android:layout_y="160dp"
        android:background="@drawable/btn_blue"
        android:text="Find Picture" />

    <Button
        android:id="@+id/finishProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="273dp"
        android:layout_y="157dp"
        android:background="@drawable/btn_blue"
        android:text="Done, get to Roaming!" />

</AbsoluteLayout>
